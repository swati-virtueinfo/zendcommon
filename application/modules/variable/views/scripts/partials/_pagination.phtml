						<a id="pg_last" href="<?php echo $this->url(array('searchSelect' => $this->searchSelect, 'searchKeyword' => $this->searchKeyword, 'page' => $this->last)); ?>" title="last"><?php echo $this->translate('Last'); ?></a>					
					<?php endif; ?>
				<?php else: ?>
					<span class="disabled"><?php echo $this->translate('Next'); ?></span>
					<span class="disabled"><?php echo $this->translate('Last'); ?></span>
				<?php endif; ?>
			</td>
		</tr>
	</table>
<?php endif;?>