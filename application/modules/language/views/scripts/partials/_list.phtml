<table border="0" width="100%" class="tblbg">
	<tr>
		<td colspan="6" align="right" class="tblrow">
			<a href="<?php echo $this->url(array('module' => $oRequest->getParam('module'), 'controller' => $oRequest->getParam('controller'), 'action' => 'addedit'));?>">
				<img src="/images/add.gif">&nbsp;<?php echo $this->translate('Add Language');?>
			</a>
		</td>		
	</tr>
	<tr>
	<?php foreach($this->asHeading as $snKey => $ssHeading): ?>
	<th align="<?php echo $this->asColumnAlign[$snKey]; ?>" width="<?php echo $this->asColumnWidth[$snKey]; ?>" class="tblheading">
	<?php if(count($this->asList) > 0): ?>
		<?php if ($this->asColumnSort[$snKey]): ?>
			<a href="<?php echo $this->url(array('sortOn' => $this->asFieldName[$snKey], 'sortBy' => (($oRequest->getParam('sortOn') == $this->asFieldName[$snKey]) ? (($oRequest->getParam('sortBy') == 'ASC') ? 'DESC' : 'ASC') : 'DESC')));?>">
