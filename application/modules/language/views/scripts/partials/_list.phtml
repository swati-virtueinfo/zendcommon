		<?php else: ?>
			<?php echo $this->translate($ssHeading) ?>
		<?php endif; ?>
	<?php else: ?>
		<?php echo $this->translate($ssHeading); ?>
	<?php endif; ?>
	</th>
	<?php endforeach; ?>
	</tr>
	<pre>
	<?php if( count( $this->asList ) > 0 ): ?>
		<?php foreach($this->asList as $asList): ?>
			<tr>
			<?php foreach($this->asFieldName as $snKey => $ssFieldName): ?>
				<td align="<?php echo $this->asColumnAlign[$snKey]; ?>" class="tblrow">
					<?php if($ssFieldName == "flag"): ?>
						<img src="/upload/<?php echo $asList[$ssFieldName]; ?>" height="20" width="20"/>
					<?php elseif($ssFieldName == "is_default"): ?>	
						<a href="<?php echo $this->url(array('module'=> $oRequest->getParam('module'),'controller'=> $oRequest->getParam('controller'),'action'=>'changedefault','id' => $asList['id']))?>">
							<img src="/images/<?php echo ($asList[$ssFieldName] == 1) ? 'active_radio.gif' : 'deactive_radio.gif';?>">
						</a>
					<?php elseif($ssFieldName == "is_active"): ?>
						<a href="<?php echo $this->url(array('module'=> $oRequest->getParam('module'),'controller'=> $oRequest->getParam('controller'),'action'=>'changeactive','id' => $asList['id']))?>">
							<img src="/images/<?php echo ($asList[$ssFieldName] == 1) ? 'active_check.gif' : 'deactive_check.gif';?>">
						</a>
					<?php else: ?>
						<?php echo (!empty($ssFieldName)) ? $asList[$ssFieldName] : $asList[$snKey] ; ?>
					<?php endif;?>
				</td>
			<?php endforeach; ?>			
			</tr>
		<?php endforeach; ?>
	<?php else: ?>
		<tr><th  colspan="<?php echo count( $this->asHeading );?>" class="tblrow"><?php echo $this->translate("No record found"); ?></th></tr>
	<?php endif;?>
</table>
